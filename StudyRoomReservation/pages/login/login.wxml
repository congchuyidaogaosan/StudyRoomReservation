<view class="login-container">
  <view class="login-box">
    <view class="title">自习室预约系统</view>
    <view class="logo-area">
      <image class="logo" src="/static/images/logo.png" mode="aspectFit"></image>
    </view>
    <view class="login-desc">申请获取以下权限</view>
    <view class="auth-desc">获得您的公开信息（昵称、头像等）</view>
    <button 
      class="wechat-login-btn" 
      open-type="getUserInfo" 
      bindgetuserinfo="handleWechatLogin"
      type="primary"
    >
      <image class="wechat-icon" src="/static/images/wechat.png" mode="aspectFit"></image>
      微信一键登录
    </button>
  </view>
</view> 
.login-container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7f7f7;
}

.login-box {
  width: 85%;
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-item {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 40rpx;
  background: #3d7eff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: normal;
}

.login-btn::after {
  border: none;
}

.input-item::placeholder {
  color: #999;
  font-size: 28rpx;
}

.verification-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.captcha-input {
  flex: 1;
}

.captcha-img {
  width: 200rpx;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.captcha-img image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.captcha-img text {
  color: #999;
  font-size: 24rpx;
} 
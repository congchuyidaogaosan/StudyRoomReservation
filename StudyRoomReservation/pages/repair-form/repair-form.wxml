<view class="repair-form">
  <view class="form-item">
    <text class="label">房间号</text>
    <text class="value">{{roomName}}</text>
  </view>
  <view class="form-item">
    <text class="label">座位位置</text>
    <text class="value">第{{seatRow}}行 第{{seatColumn}}列</text>
  </view>
  <view class="form-item">
    <text class="label">问题描述</text>
    <textarea 
      class="description" 
      placeholder="请描述遇到的问题" 
      value="{{description}}" 
      bindinput="handleInput"
    ></textarea>
  </view>
  <button class="submit-btn" bindtap="submitRepair">提交报修</button>
</view> 
.repair-form {
  padding: 30rpx;
  background: #fff;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
}

.description {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #ffa940, #fa8c16);
  color: #fff;
  border-radius: 8rpx;
} 
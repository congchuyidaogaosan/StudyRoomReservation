.my-page {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.unauthorized {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.auth-btn {
  background: #3d7eff;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

.auth-btn::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #f0f0f0;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.function-list {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.item-left {
  display: flex;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-item text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
}

.avatar-btn {
  padding: 0;
  background: none;
  border: none;
  margin: 0;
  line-height: 1;
  width: auto !important;
}

.avatar-btn::after {
  border: none;
}

.nickname-input {
  background: none;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-left: 30rpx;
  padding: 10rpx;
  min-width: 200rpx;
}

.nickname-input::after {
  border: none;
} 
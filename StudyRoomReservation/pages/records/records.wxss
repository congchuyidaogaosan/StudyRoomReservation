.container {
  padding: 20rpx;
}

.tab-bar {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.tab.active {
  color: #007AFF;
  border-bottom: 2px solid #007AFF;
}

.record-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.record-info {
  font-size: 28rpx;
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.time {
  color: #666;
  margin-bottom: 10rpx;
}

.status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.status.active {
  background: #e6f3ff;
  color: #007AFF;
}

.status.completed {
  background: #f0f0f0;
  color: #999;
}

.operations {
  margin-top: 20rpx;
  text-align: right;
}

.cancel-btn {
  display: inline-block;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 4rpx;
}

.records-page {
  min-height: 100vh;
  background: #f7f7f7;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 1;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #3d7eff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #3d7eff;
  border-radius: 2rpx;
}

.records-list {
  padding: 30rpx;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.room-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.time {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.icon-time {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status-ongoing {
  color: #3d7eff;
  background: rgba(61, 126, 255, 0.1);
}

.status-completed {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
}

.empty image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
} 
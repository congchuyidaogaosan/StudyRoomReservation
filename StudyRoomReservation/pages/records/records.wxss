.container {
  padding: 20rpx;
}

.tab-bar {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.tab.active {
  color: #007AFF;
  border-bottom: 2px solid #007AFF;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.record-info {
  margin-bottom: 20rpx;
}

.room-info, .seat-info, .time-info {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.label {
  color: #666;
  margin-right: 10rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: auto;
  min-width: 140rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 0 24rpx !important;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.start-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049) !important;
  color: #fff;
}

.cancel-btn {
  background: linear-gradient(135deg, #ff4d4f, #f5222d) !important;
  color: #fff;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.records-page {
  min-height: 100vh;
  background: #f7f7f7;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 1;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #3d7eff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #3d7eff;
  border-radius: 2rpx;
}

.records-list {
  padding: 30rpx;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.room-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.time {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.icon-time {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status-ongoing {
  color: #3d7eff;
  background: rgba(61, 126, 255, 0.1);
}

.status-completed {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
}

.empty image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
}

/* 覆盖微信按钮的默认样式 */
button::after {
  border: none;
}

button:not([size='mini']) {
  width: auto !important;
  padding: 0 !important;
  font-weight: normal !important;
  line-height: normal !important;
  /* background: none !important; */
}

.repair-btn {
  background: linear-gradient(135deg, #ffa940, #fa8c16) !important;  /* 橙色系渐变 */
  color: #fff;
  /* margin-top: 16rpx;  与其他按钮保持间距 */
} 
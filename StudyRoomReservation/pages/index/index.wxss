.container {
  padding: 20rpx;
}

.room-info {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.seat-container {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.seat-grid {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  gap: 10rpx;
  padding: 20rpx;
}

.seat {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.seat.occupied {
  background: #ccc;
  pointer-events: none;
}

.seat.selected {
  background: #007AFF;
  color: #fff;
}

.legend {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.seat-demo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.seat-demo.available {
  background: #fff;
}

.seat-demo.occupied {
  background: #ccc;
}

.seat-demo.selected {
  background: #007AFF;
}

.submit-btn {
  width: 90%;
  margin-top: 40rpx;
  background: #007AFF;
  color: #fff;
}

/* 添加时间选择相关样式 */
.date-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.picker-arrow {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #666;
}

.selection-area {
  width: 90%;
  margin: 20rpx auto;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-item:last-child {
  border-bottom: none;
} 